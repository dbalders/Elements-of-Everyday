<div id="sidebar" class="flex-sidebar flex-one">
    <div class="sidebar-about flex-vertical">
        {{#get "users" slug="chelseabalderston" as |user|}}
            {{#user}}
                <div class="about-desc">{{bio}}</div>
            {{/user}}
        {{/get}}
    </div>
    <div class="sidebar-social flex-vertical">
        <div class="sidebar-social-container flex">
            <a class="sidebar-social-link flex-one" href="https://twitter.com/chelsbalderston">
                <img class="sidebar-icon" src="{{asset "/images/icons/Twitter.png"}}">
            </a>
            <a class="sidebar-social-link flex-one" href="https://facebook.com/elementsofeveryday">
                <img class="sidebar-icon" src="{{asset "/images/icons/Facebook.png"}}">
            </a>
            <a class="sidebar-social-link flex-one" href="https://instagram.com/chelseabalderston">
                <img class="sidebar-icon" src="{{asset "/images/icons/Instagram.png"}}">
            </a>
            <a class="sidebar-social-link flex-one" href="https://pinterest.com/madteaparty">
                <img class="sidebar-icon" src="{{asset "/images/icons/Pinterest.png"}}">
            </a>
        </div>
    </div>
    <div id="optin" class="sidebar-content" data-remodal-target="sidebar-optin" class="subscribe-button">
        <div>Subscribe</div>
        <div class="remodal" data-remodal-id="sidebar-optin" data-remodal-options="closeOnConfirm: false, hashTracking: false">
            <!-- Begin MailChimp Signup Form -->
            <div id="mc_embed_signup" style="display:none;">
                <form action="//elementsofeveryday.us15.list-manage.com/subscribe/post?u=585daa83e6892315743a1214f&amp;id=443891fddf" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                    <div id="mc_embed_signup_scroll">
                        <h2 class="modal-header">Get my latest posts in your inbox</h2>
                        <div class="mc-field-group modal-name">
                            {{!-- <label for="mce-FNAME"></label> --}}
                            <input type="text" placeholder="First Name " name="FNAME" class="" id="mce-FNAME">
                        </div>
                        <div class="mc-field-group modal-email">
                            {{!-- <label for="mce-EMAIL"></span> --}}
                            </label>
                            <input type="email" placeholder="Email Address" name="EMAIL" class="required email" id="mce-EMAIL">
                        </div>
                        <div id="mce-responses" class="clear">
                            <div class="response" id="mce-error-response" style="display:none"></div>
                            <div class="response" id="mce-success-response" style="display:none"></div>
                        </div>
                        <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                        <div style="position: absolute; left: -5000px;" aria-hidden="true">
                            <input type="text" name="b_585daa83e6892315743a1214f_443891fddf" tabindex="-1" value="">
                        </div>
                        <div class="clear">
                            <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button modal-submit">
                        </div>
                    </div>
                </form>
            </div>
            <!--End mc_embed_signup-->
        </div>
        <div class="remodal" data-remodal-id="thanks">
            <p>Email sent. Thanks!!</p>
            <button data-remodal-action="cancel" class="remodal-cancel">Close</button>
        </div>
    </div>
    <div class="sidebar-instagram">
        <!-- LightWidget WIDGET -->
        <script src="//lightwidget.com/widgets/lightwidget.js"></script>
        <iframe src="//lightwidget.com/widgets/e199dce216e954489914b4b7b5867bdb.html" scrolling="no" allowtransparency="true" class="lightwidget-widget" style="width: 100%; border: 0; overflow: hidden;"></iframe>
    </div>
    <div class="sidebar-latest flex-vertical">
        <h3 class="sidebar-header">Popular Posts</h3>
        {{#get "posts" filter="tags:popular" limit=4}}
            {{#foreach posts}}
                <a class="latest-posts latest-posts-popular flex" href="{{url}}">
                    <div class="latest-posts-img">
                        <img src="{{image}}?w=150"></img>
                    </div>
                    <div class="latest-posts-info flex-one flex-vertical">
                        <div class="latest-posts-title">{{title}}</div>
                        <div class="latest-posts-date">{{date}}</div>
                    </div>
                </a>
            {{/foreach}}
        {{/get}}
    </div>
    <div class="sidebar-latest flex-vertical">
        <h3 class="sidebar-header">Latest Posts</h3>
        {{#get "posts" limit=4}}
            {{#foreach posts}}
                <a class="latest-posts flex" href="{{url}}">
                    <div class="latest-posts-img">
                        <img src="{{image}}?w=150"></img>
                    </div>
                    <div class="latest-posts-info flex-one flex-vertical">
                        <div class="latest-posts-title">{{title}}</div>
                        <div class="latest-posts-date">{{date}}</div>
                    </div>
                </a>
            {{/foreach}}

            <script>
                for (i = 0; i < $('.latest-posts-img img').length; i++) {
                    var sideImg = $(".latest-posts-img img");

                    if ($(sideImg[i]).width() > $(sideImg[i]).height()) {
                        $(sideImg[i]).addClass('landscape-sidebar-image');
                    }
                }
            </script>
        {{/get}}
    </div>
</div>
