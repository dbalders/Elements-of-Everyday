{{!< default}}
{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}
<main class="content error-content" role="main">
    <div class="wrapper flex-wrapper">
        <div id="content" class="flex-content">
            <article class="{{post_class}}">
                <div class="post-wrapper">
                    <div class="post-content">
                        <h1 class="error-header">Page not found</h1>
                        <div class="error-desc">Sorry, somehow you ended up on a page that does not exist. Did you mean to go to one of these posts?</div>
                        <div class="error-posts-container flex-vertical">
                            {{#get "posts" filter="tags:popular" limit=3 page=1}}
                                <div class="error-posts flex">
                                {{#foreach posts}}
                                    <a class="error-posts flex-vertical flex-one" href="{{url}}">
                                        <div class="error-post-img">
                                            <img src="{{img_url feature_image}}"></img>
                                        </div>
                                        <div class="error-post-info flex-one flex-vertical">
                                            <div class="error-post-title">{{title}}</div>
                                            <div class="error-post-date">{{date}}</div>
                                        </div>
                                    </a>
                                {{/foreach}}
                                </div>
                            {{/get}}
                            {{#get "posts" filter="tags:popular" limit=3 page=2}}
                                <div class="error-posts flex">
                                {{#foreach posts}}
                                    <a class="error-posts flex-vertical flex-one" href="{{url}}">
                                        <div class="error-post-img">
                                            <img src="{{img_url feature_image}}"></img>
                                        </div>
                                        <div class="error-post-info flex-one flex-vertical">
                                            <div class="error-post-title">{{title}}</div>
                                            <div class="error-post-date">{{date}}</div>
                                        </div>
                                    </a>
                                {{/foreach}}
                                </div>
                            {{/get}}
                        </div>
                    </div>
                    </section>
                </div>
            </article>
        </div>
        {{> "sidebar"}}
    </div>
</main>
